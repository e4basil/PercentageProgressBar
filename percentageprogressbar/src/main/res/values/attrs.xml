<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PercentageProgressBar">
        <attr name="ppb_anim_duration" format="integer"/>
        <attr name="ppb_outer_color" format="color"/>
        <attr name="ppb_inner_color" format="color"/>
        <attr name="ppb_thickness" format="dimension"/>
        <attr name="ppb_inner_padding" format="dimension"/>
        <attr name="ppb_text_size" format="dimension"/>

        <attr name="ppb_progress" format="integer"/>
        <attr name="ppb_progress_max" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CircleProgress">
        <attr name="circle_progress" format="integer"/>
        <attr name="circle_max" format="integer"/>

        <attr name="circle_unfinished_color" format="color"/>
        <attr name="circle_finished_color" format="color"/>

        <attr name="circle_text_size" format="dimension"/>
        <attr name="circle_text_color" format="color"/>

        <attr name="circle_prefix_text" format="string"/>
        <attr name="circle_suffix_text" format="string"/>
    </declare-styleable>
</resources>